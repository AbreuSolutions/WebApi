<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Marko sistemas metálicos</title>
    <link rel="stylesheet" href="https://kit-pro.fontawesome.com/releases/v5.14.0/css/pro.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="@ViewData["appUrl"]site.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="Início">
                                <img class="mr-5" src="@ViewData["appUrl"]logo-marko.png" />
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mt-2" href="@ViewData["appUrl"]Início">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mt-2" href="@ViewData["appUrlApi"]Documentação/Usuário">Usuário</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark mt-2" href="@ViewData["appUrlApi"]Documentação/Produto">Produto</a>
                        </li>
                        <li class="nav-item">
                            @{
                                if (!User.Identity.IsAuthenticated)
                                {
                                    <a class="nav-link text-dark mt-2" href="@ViewData["appUrl"]Acessar">Acessar</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark mt-2" href="@ViewData["appUrl"]Minha-Conta">Minha conta</a>
                                }
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <partial name="_CookieConsentPartial" />

    <div class="clearfix"></div>

    <div class="py-3">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <div class="clearfix"></div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid text-center">
            &copy; 2021 - Desafio da Marko sistemas metálicos.
        </div>
    </footer>

    <div class="clearfix mb-5"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
