<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Abreu Solutions</title>
    <link rel="stylesheet" href="https://kit-pro.fontawesome.com/releases/v5.14.0/css/pro.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://getbootstrap.com/docs/5.0/examples/carousel/carousel.css" />
    <link rel="stylesheet" href="@ViewData["appUrl"]site.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-white fixed-top border-bottom border-2">
            <div class="container-fluid">
                <a class="navbar-brand" href="@ViewData["appUrl"]Início">Abreu Solutions</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@ViewData["appUrl"]Início">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@ViewData["appUrlApi"]Documentação/Produto">Produto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@ViewData["appUrlApi"]Documentação/Usuário">Usuário</a>
                        </li>
                        <li class="nav-item">
                            @{
                                if (!User.Identity.IsAuthenticated)
                                {
                                    <a class="nav-link" href="@ViewData["appUrl"]Acessar">Acessar</a>
                                }
                                else
                                {
                                    <a class="nav-link" href="@ViewData["appUrl"]Minha-Conta">Minha conta</a>
                                }
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <partial name="_CookieConsentPartial" />

    <main>

        @RenderBody()

        <footer class="container">
            <p class="float-end"><a href="#">Back to top</a></p>
            <p>&copy; 2021 Abreu Solutions</p>
        </footer>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
