
@{
    ViewData["Title"] = "Minha conta";
}

<div class="container marketing mt-5">
    <div class="row justify-content-center">

        <div class="col-12 mb-3 text-center">
            <h3 class="title-3">@ViewData["Title"]</h3>
        </div>

        <div class="col-12 col-sm-8 col-md-7 col-lg-6 mb-3">

            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-center text-center">

                        <div class="col-6 mb-3">
                            <div class="mt-3">
                                <i class="fal fa-dice fa-4x"></i><br />
                                <label>Meus dados</label><br />
                                <a href="@ViewData["appUrl"]Meus-Dados" class="">+ detalhe</a>
                            </div>
                        </div>

                        <div class="col-6 mb-3">
                            <div class="mt-3">
                                <i class="fal fa-gifts fa-4x"></i><br />
                                <label>Cadastrar produto</label><br />
                                <a href="@ViewData["appUrl"]Cadastrar-Produto" class="">+ detalhe</a>
                            </div>
                        </div>

                        <div class="col-6 mb-3">
                            <div class="mt-3">
                                <i class="fal fa-user fa-4x"></i><br />
                                <label>API Usuário</label><br />
                                <a href="@ViewData["appUrl"]Api/Documentação/Usuário" class="">+ detalhe</a>
                            </div>
                        </div>

                        <div class="col-6 mb-3">
                            <div class="mt-3">
                                <i class="fal fa-gifts fa-4x"></i><br />
                                <label>API Produto</label><br />
                                <a href="@ViewData["appUrl"]Api/Documentação/Produto" class="">+ detalhe</a>
                            </div>
                        </div>

                        <div class="col-6 mb-3">
                            <div class="mt-3">
                                <i class="fal fa-power-off fa-3x"></i><br />
                                <label>Encerrar minha sessão</label><br />
                                <a href="@ViewData["appUrl"]Sair" class="">sair</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

