@using Domain.Entities;
@model Usuario;
@{
    string sStatus = "001";
    try { sStatus = ViewData["Status"].ToString(); } catch { sStatus = "001"; }
}

<div class="row justify-content-center">

    <div class="col-12 mb-3 text-center">
        <h3 class="title-3">@ViewData["Title"]</h3>
    </div>

    <div class="col-12 col-sm-8 col-md-5 col-lg-4 mb-3">

        @{
            try
            {
                switch (sStatus)
                {
                    case "901":
                        {
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Ops!</h5>
                                    <p class="card-text">Ocorreu um erro inesperado.</p>
                                </div>
                            </div>
                        }
                        break;
                    case "001":
                        {
                            <form id="IdFrmPostLogIn" method="post" action="" class="card">
                                <div class="card-body">
                                    <div class="row justify-content-center">

                                        <div class="col-12 mb-3">
                                            <label>E-mail:</label>
                                            <input type="email" asp-for="Email" class="form-control" autocomplete="off" required maxlength="50" />
                                        </div>

                                        <div class="col-12 mb-3">
                                            <label>Senha:</label>
                                            <div class="input-group">
                                                <input type="password" asp-for="Password" class="form-control" aria-describedby="basic-addon2" autocomplete="off" required maxlength="50" />
                                                <button type="submit" id="basic-addon2" class="input-group-text">Entrar</button>
                                            </div>
                                        </div>

                                        <div class="col-12 pt-2 border-top text-center">
                                            <a href="Cadastro" class="">Quero me cadastrar</a>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        }
                        break;
                }
            }
            catch { }
        }

    </div>
</div>
